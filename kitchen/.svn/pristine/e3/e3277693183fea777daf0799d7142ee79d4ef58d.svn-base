<script type="text/javascript">
	function toggleSort() {
		var image_link = "";
		var ajax_link = "";
		if(sessionStorage.sort_type == 1){
			image_link = "images/sortByTable.png";
			ajax_link = "php/sortByFood.php";
			sessionStorage.sort_type = 2;
		}else{
			image_link = "images/sortByFood.png";
			ajax_link = "php/container.php?index="+0;
			sessionStorage.sort_type = 1;
		}
	
	
		$("#sort").attr("src", image_link);
	
		$.ajax({
			type: 'POST',
			url: ajax_link,
			data: null,
			success: function(result)
			{
				$('#container').html(result);
			},
			error: {
			}
		});  
	}
</script>