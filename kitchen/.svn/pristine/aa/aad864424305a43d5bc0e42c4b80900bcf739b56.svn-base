.clear{
	clear: both;
}

#page{
	min-width: 1000px; 
	font-weight: bold; 
	min-height: 343px;
}

#titleHeader{
	text-align:center; 
	background-image: -webkit-linear-gradient( #4b5355, #0b1314 ); 
	background-image: -moz-linear-gradient( #4b5355, #0b1314 );
    height:41px; 
	line-height:41px; 
	color:#FFF; 
	font-size: 1.2em; 
	text-shadow:1px 0 0 #000; 
}

#titleListTable{
	width: 100%; 
	height: 40px; 
	line-height:40px; 
	color:#06ABCE; 
	text-shadow:1px 0 0 #000;     		
	text-align:center; 
	background-image: -webkit-linear-gradient( #6389b5, #334c69 );
	background-image: -moz-linear-gradient( #6389b5, #334c69 );
}

#menu_container{
	-webkit-transform: rotate(90deg); 
	-moz-transform: rotate(90deg);
	position: fixed;
	top: 325px;
	right: -185px;
	z-index: 999;
}

#menu_container  span{
	text-shadow: none;
	cursor: pointer;
	text-align: center;
	float: left;
	text-decoration: none;
	background: #8A4B08;
	font-size: 1.2em;
	padding: 10px;
	width: 120px;
	display: block;
}

.itemListOrder{
	width: 100%; 
	color:#FFF; 
	margin-bottom:1px; 
	text-align:center; 
	text-shadow:none;
}

.foodCount{
	color: #feff8c;
	font-size: 130px;
	min-width: 148px;
}

.foodBlock{
	border-right: dashed #97bbe6 1px;
	border-left: dashed #97bbe6 1px;
	min-width: 250px;
}

.foodName {
	font-size: 22px;
}

.foodImage  img{
	width: 200px;
	height: 140px;
	padding: 4px;
	border: solid #2ffc00 1px;
	background: #ecf6e9;
}


.comment span{
	margin: 10px 0;
	margin-right: 40px;
	width: 100%;
	line-height: 25px;
	display: block;
	border-bottom: dashed #97bbe6 1px;
	cursor: pointer;
	max-width: 594px;
}

.comment .buttonControl{
	width: 48px;
	height: 48px;
	float: right;
	cursor: pointer;
	position: relative;
	top: -5px;
}

#footer{
	text-align:right; 
	font-size:0.7em;
}

.a_selected{
	color: #FFF;
}

